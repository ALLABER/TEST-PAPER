<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryToWhite</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="Text.Regular" parent="Text">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text.Medium" parent="Text">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Text.Bold" parent="Text">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Text.L.Bold" parent="Text.Bold">
        <item name="android:textSize">17dp</item>
        <item name="lineHeight">24dp</item>
    </style>

    <style name="Text.L.Medium" parent="Text.Medium">
        <item name="android:textSize">17dp</item>
        <item name="lineHeight">24dp</item>
    </style>

    <style name="Text.L.Regular" parent="Text.Regular">
        <item name="android:textSize">17dp</item>
        <item name="lineHeight">24dp</item>
    </style>

    <style name="Text.M.Medium" parent="Text.Bold">
        <item name="android:textSize">15dp</item>
        <item name="lineHeight">22dp</item>
    </style>

    <style name="Text.M.Regular" parent="Text.Regular">
        <item name="android:textSize">15dp</item>
        <item name="lineHeight">22dp</item>
    </style>

    <style name="Text.S.Medium" parent="Text.Medium">
        <item name="android:textSize">13dp</item>
        <item name="lineHeight">18dp</item>
    </style>

    <style name="Text.S.Regular" parent="Text.Regular">
        <item name="android:textSize">13dp</item>
        <item name="lineHeight">18dp</item>
    </style>
</resources>